---
// import type { Component } from 'astro';

import { cn } from '@/utils'

interface Props {
	class?: string
	events: {
		date: string
		// content: Component
	}[]
}
const { class: className, events, ...props } = Astro.props
---

<div class={cn(className)} {...props}>
	<div class='timeline'>
		{
			events.map((event) => (
				<div class='flex flex-col gap-2'>
					<div class='min-w-[120px]'>{event.date}</div>
				</div>
			))
		}
	</div>
</div>
