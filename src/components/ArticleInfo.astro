---
import { cn } from '@/utils'
const { class: className, path, ...props } = Astro.props
---

<div
  id='article-info'
  class={cn('mt-4 text-base text-sm text-muted-foreground', className)}
  {...props}
>
  <span class='waline-pageview-count' data-path={path}></span>{' '}
  views |
  <span class='waline-comment-count' data-path={path}></span>{' '}
  comments
</div>
